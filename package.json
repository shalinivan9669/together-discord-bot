{
  "name": "together-discord-bot",
  "version": "0.1.0",
  "private": true,
  "description": "Interactions-first Discord bot for relationship server loops",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier -w .",
    "db:generate": "pnpm db:strip-bom && drizzle-kit generate",
    "db:strip-bom": "tsx scripts/strip-bom.ts",
    "db:check-bom": "tsx scripts/strip-bom.ts --check",
    "db:migrate": "pnpm db:strip-bom && drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "seed": "tsx scripts/seed.ts",
    "smoke": "tsx scripts/smoke.ts",
    "commands:deploy": "tsx scripts/deploy-commands.ts",
    "discord:deploy-commands": "pnpm commands:deploy"
  },
  "dependencies": {
    "@discordjs/rest": "2.6.0",
    "@sentry/node": "8.49.0",
    "discord.js": "14.25.1",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.36.4",
    "fastify": "5.7.4",
    "pg": "8.13.1",
    "pg-boss": "10.1.5",
    "pino": "9.4.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/node": "22.10.1",
    "@types/pg": "8.11.10",
    "@typescript-eslint/eslint-plugin": "8.15.0",
    "@typescript-eslint/parser": "8.15.0",
    "drizzle-kit": "0.29.1",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "prettier": "3.3.3",
    "tsx": "4.19.2",
    "typescript": "5.6.3",
    "vitest": "2.1.5"
  },
  "pnpm": {
    "overrides": {
      "undici": "6.23.0"
    }
  }
}
